---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Contact Us</h1>
      
      <div class="mt-6 text-gray-700">
        <p class="mb-4">
          Have questions about NoCodeAssets? Want to report an issue? Or just want to say hello? 
          We'd love to hear from you!
        </p>
        
        <div class="bg-white shadow overflow-hidden sm:rounded-lg mt-8">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Contact Information</h3>
            <div class="mt-5">
              <div class="flex items-center mt-2">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
                <span class="ml-3 text-gray-700">contact@nocodeassets.com</span>
              </div>
              
              <div class="flex items-center mt-4">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
